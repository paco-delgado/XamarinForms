<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FluToDoApp.Views.ToDoListPage"
             BindingContext="{Binding ToDoListViewModel, Source={StaticResource Locator}}">
    <StackLayout>
        <ListView ItemsSource="{Binding ToDoItems}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="20,0">
                            <Label Text="{Binding Name}" VerticalOptions="Center"/>
                            <Image Source="http://www.iconsdb.com/icons/preview/guacamole-green/check-mark-3-xl.png" IsVisible="{Binding IsComplete}" HorizontalOptions="EndAndExpand"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="New" Command="{Binding AddToDoItemCommand}"/>
    </StackLayout>
</ContentPage>