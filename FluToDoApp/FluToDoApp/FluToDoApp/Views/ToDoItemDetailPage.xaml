<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FluToDoApp.Views.ToDoItemDetailPage">
    <TableView Intent="Form">
        <TableRoot>
            <TableSection Title="ToDo Item">
                <EntryCell Label="Name" Text="{Binding Path=ToDoItem.Name}" />
            </TableSection>
            <TableSection>
                <ViewCell>
                    <Button Text="Create" Command="{Binding SaveCommand}" />
                </ViewCell>
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>